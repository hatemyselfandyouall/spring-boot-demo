		  @haoxz11MyBatis
		  插入机构险种表记录
		-->
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER" >
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
		<![CDATA[
		insert into sys_orginstype (org_id, ins_id, create_time, modify_time)
		values (#{orgId,jdbcType=BIGINT}, #{insId,jdbcType=BIGINT}, sysdate(), sysdate())
		]]>
	</insert>
	<update id="updateSysOrginstype" parameterType="com.wangxinenpu.springbootdemo.dataobject.po.SysOrginstype" >
		<!--
		  @haoxz11MyBatis
		  更新机构险种表记录
		-->
		update sys_orginstype
		<set >
			<if test="orgId != null" >
				org_id = #{orgId,jdbcType=BIGINT},
			</if>
			<if test="insId != null" >
				ins_id = #{insId,jdbcType=BIGINT},
			</if>
			modify_time = sysdate()
		</set>
		where id = #{id,jdbcType=BIGINT}
	</update>
	<select id="getByPrimaryKey" resultMap="SysOrginstype" parameterType="java.lang.Long" >
		<!--
		  @haoxz11MyBatis
		  根据主键查询机构险种表记录
		-->
		select  * from sys_orginstype where id = #{id,jdbcType=BIGINT}
	</select>
	<sql id="whereSQL" >
		<!--
		
		  搜索机构险种表记录，可修改
		-->
		<where >
			<if test="id != null" >
				<![CDATA[ AND id = #{id,jdbcType=BIGINT} ]]> 
			</if>
			<if test="orgId != null" >
				<![CDATA[ AND org_id = #{orgId,jdbcType=BIGINT} ]]> 
			</if>
			<if test="insId != null" >
				<![CDATA[ AND ins_id = #{insId,jdbcType=BIGINT} ]]> 
			</if>
		</where>
	</sql>
	<select id="getListByWhere" resultMap="SysOrginstype" parameterType="map" >
		<!--
		  @haoxz11MyBatis
		  搜索机构险种表列表
		-->
		select
