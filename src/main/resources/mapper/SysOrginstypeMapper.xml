		  @haoxz11MyBatis
		  得到搜索机构险种表的记录数量
		-->
		select count(*) from sys_orginstype
		<include refid="whereSQL" />
	</select>
	
	<!-- 根据机构ID查询 -->
	<select id="findByOrgId" parameterType="java.lang.Long" resultMap="SysOrginstype">
		select  o.*,c.code_value as codeValue from sys_orginstype o,sys_code c where o.ins_id=c.id and o.org_id = #{orgId,jdbcType=BIGINT}
	</select>
	
