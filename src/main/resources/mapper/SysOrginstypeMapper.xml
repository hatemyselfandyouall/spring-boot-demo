  	<select id="existenceByOrgIdAndInsId" resultMap="SysOrginstype" parameterType="map" >
		select * from sys_orginstype where org_id = #{orgId,jdbcType=BIGINT} and ins_id  = (select id from sys_code where code_value =#{insId,jdbcType=VARCHAR})
	</select>
