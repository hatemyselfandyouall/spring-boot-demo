<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangxinenpu.springbootdemo.dao.mapper.SysBusinessTypeMapper" >
	<resultMap id="SysBusinessType" type="com.wangxinenpu.springbootdemo.dataobject.po.SysBusinessType" >
		<!--
		  @haoxz11MyBatis
		  业务类型表表
		-->
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="number" property="number" jdbcType="VARCHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="BIGINT" />
		<result column="active" property="active" jdbcType="BIGINT" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
	</resultMap>
	<insert id="insertSysBusinessType" parameterType="com.wangxinenpu.springbootdemo.dataobject.po.SysBusinessType" useGeneratedKeys="true" >
		<!--
		  @haoxz11MyBatis
		  插入业务类型表记录
		-->
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER" >
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
		<![CDATA[
		insert into sys_business_type (`number`, `name`, parent_id, 
			active, create_time, modify_time)
		values (#{number,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR}, #{parentId,jdbcType=BIGINT}, 
			#{active,jdbcType=BIGINT}, sysdate(), sysdate())
		]]>
	</insert>
	<update id="updateSysBusinessType" parameterType="com.wangxinenpu.springbootdemo.dataobject.po.SysBusinessType" >
		<!--
		  @haoxz11MyBatis
		  更新业务类型表记录
		-->
		update sys_business_type
		<set >
			<if test="number != null" >
				`number` = #{number,jdbcType=VARCHAR},
			</if>
			<if test="name != null" >
				`name` = #{name,jdbcType=VARCHAR},
			</if>
			<if test="parentId != null" >
				parent_id = #{parentId,jdbcType=BIGINT},
			</if>
			<if test="active != null" >
				active = #{active,jdbcType=BIGINT},
			</if>
			modify_time = sysdate()
		</set>
		where id = #{id,jdbcType=BIGINT}
	</update>
	<select id="getByPrimaryKey" resultMap="SysBusinessType" parameterType="java.lang.Long" >
		<!--
		  @haoxz11MyBatis
		  根据主键查询业务类型表记录
		-->
		select  * from sys_business_type where id = #{id,jdbcType=BIGINT}
	</select>
	<sql id="whereSQL" >
		<!--
		
		  搜索业务类型表记录，可修改
		-->
		<where >
			<if test="id != null" >
				<![CDATA[ AND id = #{id,jdbcType=BIGINT} ]]> 
			</if>
			<if test="number != null" >
				<![CDATA[ AND `number` = #{number,jdbcType=VARCHAR} ]]> 
			</if>
			<if test="name != null" >
				<![CDATA[ AND `name` = #{name,jdbcType=VARCHAR} ]]> 
			</if>
			<if test="parentId != null" >
				<![CDATA[ AND parent_id = #{parentId,jdbcType=BIGINT} ]]> 
			</if>
			<if test="active != null" >
				<![CDATA[ AND active = #{active,jdbcType=BIGINT} ]]> 
			</if>
		</where>
	</sql>
	<select id="getListByWhere" resultMap="SysBusinessType" parameterType="map" >
		<!--
		  @haoxz11MyBatis
		  搜索业务类型表列表
		-->
		select
		<if test="FIELDS != null" >
			${FIELDS}
		</if>
		<if test="FIELDS == null" >
			*
		</if>
		from sys_business_type
		<include refid="whereSQL" />
		<if test="ORDERLIST != null" >
			 ORDER BY ${ORDERLIST}
		</if>
	</select>
	<select id="getCountByWhere" resultType="java.lang.Integer" parameterType="map" >
		<!--
		  @haoxz11MyBatis
		  得到搜索业务类型表的记录数量
		-->
		select count(*) from sys_business_type
		<include refid="whereSQL" />
	</select>
	
	<!-- 根据渠道、区域、大类获取业务类型 -->
	<select id="getListByBusPar" resultMap="SysBusinessType" parameterType="map" >
		select * from sys_business_type a where a.number like concat('%',#{busPar,jdbcType=VARCHAR},'%') and a.active=0
	</select>
	
</mapper>