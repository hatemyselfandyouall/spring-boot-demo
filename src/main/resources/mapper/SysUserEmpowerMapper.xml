<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangxinenpu.springbootdemo.dao.mapper.SysUserEmpowerMapper" >
	<resultMap id="SysUserEmpower" type="com.wangxinenpu.springbootdemo.dataobject.po.SysUserEmpower" >
		<!--
		  @haoxz11MyBatis
		 单点登录用户授权
		-->
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="user_id" property="userId" jdbcType="VARCHAR" />
		<result column="yth_user_id" property="ythUserId" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
	</resultMap>
	<insert id="insertSysUserEmpower" parameterType="com.wangxinenpu.springbootdemo.dataobject.po.SysUserEmpower" useGeneratedKeys="true" >
		<!--
		  @haoxz11MyBatis
		  插入用户授权记录
		-->
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER" >
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
		<![CDATA[
		insert into sys_user_empower (user_id, yth_user_id, create_time, modify_time)
		values (#{userId,jdbcType=VARCHAR}, #{ythUserId,jdbcType=VARCHAR}, sysdate(), sysdate())
		]]>
	</insert>
	<update id="updateSysUserEmpower" parameterType="com.wangxinenpu.springbootdemo.dataobject.po.SysUserEmpower" >
		<!--
		  @haoxz11MyBatis
		  更新用户授权记录
		-->
		update sys_user_empower
		<set >
			<if test="userId != null" >
				user_id = #{userId,jdbcType=VARCHAR},
			</if>
			<if test="ythUserId != null" >
				yth_user_id = #{ythUserId,jdbcType=VARCHAR},
			</if>
			modify_time = sysdate()
		</set>
		where id = #{id,jdbcType=BIGINT}
	</update>
	<select id="getByPrimaryKey" resultMap="SysUserEmpower" parameterType="java.lang.Long" >
		<!--
		  @haoxz11MyBatis
		  根据主键查询用户授权记录
		-->
		select  * from sys_user_empower where id = #{id,jdbcType=BIGINT}
	</select>
	<sql id="whereSQL" >
		<!--
		
		  搜索用户授权记录，可修改
		-->
		<where >
			<if test="id != null" >
				<![CDATA[ AND id = #{id,jdbcType=BIGINT} ]]> 
			</if>
			<if test="userId != null and userId !='' " >
				<![CDATA[ AND user_id = #{userId,jdbcType=VARCHAR} ]]> 
			</if>
			<if test="ythUserId != null and ythUserId !='' " >
				<![CDATA[ AND yth_user_id = #{ythUserId,jdbcType=VARCHAR} ]]> 
			</if>
		</where>
	</sql>
	<select id="getListByWhere" resultMap="SysUserEmpower" parameterType="map" >
		<!--
		  @haoxz11MyBatis
		  搜索用户授权列表
		-->
		select
		<if test="FIELDS != null" >
			${FIELDS}
		</if>
		<if test="FIELDS == null" >
			*
		</if>
		from sys_user_empower
		<include refid="whereSQL" />
		<if test="ORDERLIST != null" >
			 ORDER BY ${ORDERLIST}
		</if>
	</select>
	<select id="getCountByWhere" resultType="java.lang.Integer" parameterType="map" >
		<!--
		  @haoxz11MyBatis
		  得到搜索用户授权的记录数量
		-->
		select count(*) from sys_user_empower
		<include refid="whereSQL" />
	</select>
	
	<!--根据用户ID删除 -->
	<delete id="deleteById"  parameterType="java.lang.Long">
		delete from sys_user_empower where user_id = #{id,jdbcType=BIGINT}
	</delete>
	
	<!--查询时间段内的一体化用户id -->
	<select id="getlistByUserIds" resultType="com.wangxinenpu.springbootdemo.dataobject.vo.SysUserEmpowerDTO">
		select id,user_id as userId,yth_user_id as ythUserId from sys_user_empower where user_id in (select id from sys_user where create_time&gt;=#{startTime} and create_time&lt;=#{endTime})
	</select>
</mapper>