<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wangxinenpu.springbootdemo.dao.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.wangxinenpu.springbootdemo.dataobject.User">
        INSERT INTO user(user_id,username,password,create_time)VALUES (#{userId},#{username},#{password},#{createTime})
    </insert>

    <select id="queryById" parameterType="Integer" resultType="com.wangxinenpu.springbootdemo.dataobject.User">
        SELECT * FROM User_tb WHERE id=#{id}
    </select>

    <update id="updateUser" parameterType="com.wangxinenpu.springbootdemo.dataobject.User">
        UPDATE User_tb SET name=#{name},age=#{age},score=#{score} WHERE id=#{id}
    </update>

    <delete id="deleteUser" parameterType="Integer">
        DELETE FROM User_tb WHERE id=#{id}
    </delete>
</mapper>